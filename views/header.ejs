<html>
    <head>
        <title> 
            <%= tittle %>
        </title>
        
            <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
      <link rel="stylesheet" href="css/style.css"> 
    </head>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <body>
<section class="container">
        <h1 align="center"> SHOPPING  LIST  APP  🛍 </h1>  
        <form action="/create-list" method="POST">
          <!-- <a href="#" clas="neon-button">Neon</a> -->
            <table class="table">
                <thead>
                  <tr class="table-active">
                    <th >ADD ITEM:</th>
                    <th >CATEGORY:</th>
                    <th >PRICE:</th>
                    <th > CART:</th>

                  </tr>
                </thead>
                <tbody>
                    <tr>
                      <td> <input type="text" name="list"placeholder="What do you want to buy?" required></input></th>
                      <td >  <select name="category" required>

                        <option>Health & Personal Care 💄 💅 🎨 🧴 </option>
                        <option>Meat & Seafood 🥩 🥓 🥩 🦀 </option>
                        <option>Fresh Produce 🍌 🍓 🍏 🍒 </option>
                        <option>Cookies, Snacks & Candy 🍭 🍩 🍬 🥮 </option>
                        <option>Other 👙 🍸 🍾 👗 </option>
                    </select></th>
                      <td ><input type="price" name="price" placeholder="Add price"required></th>
                      <td ><input type="submit"  class="btn btn-success"id="add" value="ADD ITEM"></th>
                    </tr>
                </tbody>
            </table>      
  </form>
    </section>
<div>          
     <h1 align="center">CHECK-LIST</h1>
     <form action="/delete-list" method="GET">
     <table class="table">
<thead>
    <tr>
    <th>Select</th>
    <th>List</th>
    <th>Category</th>
    <th>Price</th>
    </tr>
 </thead>
 <% for(let i of list) { %>                          
<tr>
    <td><input type="checkbox" name="<%= i._id %>" ></td>
    <td><p id="check-list"> 🟢 <%= i.list %></td>
    <td><p id="list-category"></p> 🟢 <%= i.category %></td>
    <td><p id="price"> $ <%= i.price %></p></td>
</tr>                   
 <% } %>                          
</table>
<div 
 align = "center"><input type="submit" class="btn btn-danger" value="DELETE ITEM">
     </div></form>
        </div>
     </body>
    
</html>

